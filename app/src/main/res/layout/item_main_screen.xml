<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.lid.lib.LabelImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            app:label_backgroundColor="@color/white"
            app:label_orientation="RIGHT_TOP"
            app:label_text=""
            app:label_textSize="18sp"
            android:background="@color/white"
            android:id="@+id/product_image"
            android:scaleType="fitCenter"
            android:transitionName="productImage"/>


        <!--<ImageView-->
           <!---->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="150dp"-->
            <!--android:src="@drawable/fruits"-->
            <!--tools:ignore="ContentDescription" />-->

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="17sp"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:layout_weight="0.7"
                android:transitionName="productName"
                android:maxLines="1"
                android:ellipsize="end"/>

            <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                android:id="@+id/number_picker_horizontal"
                android:layout_width="0dp"
                android:layout_height="30dp"
                app:snp_buttonTouchScaleFactor="0.8"
                app:snp_orientation="vertical"
                app:snp_value_text_color="@color/colorPrimary"
                app:snp_value_text_size="16sp"
                app:snp_value_text_appearance="?android:attr/textAppearanceMedium"
                app:snp_maxValue="1000"
                app:snp_minValue="1"
                app:snp_stepSize="1"
                android:layout_weight="0.3"
                android:alpha="0.4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:background="@drawable/green_bg_price"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:transitionName="productPrice"
                android:padding="3dp"/>

            <Button
                android:id="@+id/add_to_cart"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="@string/add_to_cart"
                android:layout_weight="0.5"
                android:background="@drawable/blue_bg"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>